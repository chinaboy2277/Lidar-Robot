<?xml version="1.0"?>
<launch>
    <node pkg="hector_mapping" type="hector_mapping" name="hector_height_mapping" output="screen">
        <!-- Topic names -->
        <param name="scan_topic" value="/scan"/>

        <!-- Frame names -->
        <param name="base_frame" value="base_link"/>
        <param name="odom_frame" value="odom"/>
        <param name="output_timing" value="false"/>

        <!-- Tf use -->
        <param name="use_tf_scan_transformation" value="true"/>
        <param name="use_tf_pose_start_estimate" value="true"/>
        <param name="pub_map_odom_transform" value="false"/>
        <param name="advertise_map_service" value="true"/>

        <!-- Map size / start point -->
        <param name="map_resolution" value="0.050"/>
        <param name="map_size" value="4096"/>
        <param name="map_start_x" value="0.75"/>
        <param name="map_start_y" value="0.25"/>
        <param name="map_multi_res_levels" value="3"/>

        <!-- Map update parameters -->
        <param name="update_factor_free" value="0.4"/>
        <param name="update_factor_occupied" value="0.95"/>
        <param name="map_update_distance_thresh" value="0.3"/>
        <param name="map_update_angle_thresh" value="0.03"/>

        <param name="laser_min_dist" value="0.6"/>
        <param name="laser_max_dist" value="3.9"/>
        <param name="laser_z_min_value" value="1.7"/>
        <param name="laser_z_max_value" value="2.1"/>

        <!-- Debug parameters -->
        <!--
          <param name="pub_drawings" value="true"/>
          <param name="pub_debug_output" value="true"/>
        -->

        <!--
        <node pkg="topic_tools" type="throttle" name="map_throttle" args="messages map 0.1 throttled_map" />

        <arg name="disable_poseupdate" default="false" />
        <group if="$(arg disable_poseupdate)">
          <param name="hector_mapping/pub_map_odom_transform" value="true"/>
          <remap from="poseupdate" to="poseupdate_disabled"/>
        </group>
        <group unless="$(arg disable_poseupdate)">
          <param name="hector_mapping/pub_map_odom_transform" value="false"/>
          <node pkg="tf" type="static_transform_publisher" name="map_nav_broadcaster" args="0 0 0 0 0 0 map nav 100"/>
        </group>
      -->

        <!--
      <param name="hector_mapping/odom_frame" value="odom2"/>
      <param name="hector_mapping/pub_map_odom_transform" value="false"/>
    -->
    </node>
</launch>
