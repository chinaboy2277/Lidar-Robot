<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="lidar_robot">
    <material name="transparent_acrylic">
        <color rgba="0.8 0.8 0.8 0.4"/>
    </material>
    <material name="aluminium">
        <color rgba="0.8 0.8 0.8 1"/>
    </material>
    <material name="aluminium_dark">
        <color rgba="0.6 0.6 0.6 1"/>
    </material>
    <material name="plastic">
        <color rgba="0.95 0.95 0.95 1"/>
    </material>
    <material name="blue">
        <color rgba="0 0 1.0 1"/>
    </material>
    <xacro:property name="c_clamp_dist" value="2.1"/>
    <xacro:property name="the_radius" value="2.1"/>

    <link name="base_link">
        <visual>
            <origin xyz="0.01 0 0" rpy="${pi/2} 0 0"/>
            <geometry>
                <mesh filename="package://lidar_robot/models/base.stl" scale="0.001 0.001 0.001"/>
            </geometry>
            <material name="transparent_acrylic"/>
        </visual>
    </link>

    <!-- =======================================================Wheel 1====================================================================== -->
    <link name="c_clamp_1">
        <visual>
            <origin xyz="-0.32 0.05 0.09" rpy="${pi/2} 0 0"/>
            <geometry>
                <mesh filename="package://lidar_robot/models/c_clamp.stl" scale="0.001 0.001 0.001"/>
            </geometry>
            <material name="aluminium"/>
        </visual>
    </link>
    <joint name="base_c_clamp_1" type="fixed">
        <parent link="base_link"/>
        <child link="c_clamp_1"/>
    </joint>
    <link name="motor_1">
        <visual>
            <origin xyz="-0.308 0 0.045" rpy="${pi/2} 0 ${pi/2}"/>
            <geometry>
                <mesh filename="package://lidar_robot/models/motor.stl" scale="0.001 0.001 0.001"/>
            </geometry>
            <material name="aluminium_dark"/>
        </visual>
    </link>
    <joint name="c_clamp_motor_1" type="fixed">
        <parent link="c_clamp_1"/>
        <child link="motor_1"/>
    </joint>
    <link name="shaft_1">
        <visual>
            <origin xyz="-0.33 0 0.045" rpy="0 0 ${pi}"/>
            <geometry>
                <mesh filename="package://lidar_robot/models/motor_shaft.stl" scale="0.001 0.001 0.001"/>
            </geometry>
            <material name="plastic"/>
        </visual>
    </link>
    <joint name="motor_shaft_1" type="continuous">
        <parent link="motor_1"/>
        <child link="shaft_1"/>
    </joint>
    <link name="wheel_1">
        <visual>
            <origin xyz="-0.365 0 0.045" rpy="0 0 ${pi/2}"/>
            <geometry>
                <mesh filename="package://lidar_robot/models/wheel2.dae"/>
            </geometry>
            <material name="wheel">
                <texture filename="package://lidar_robot/models/wheel_color.png"/>
            </material>
        </visual>
    </link>
    <joint name="shaft_wheel_1" type="fixed">
        <parent link="shaft_1"/>
        <child link="wheel_1"/>
    </joint>

    <!-- =======================================================Wheel 2====================================================================== -->
    <link name="c_clamp_2">
        <visual>
            <origin xyz="0.05 0.32 0.09" rpy="${pi/2} 0 -${pi/2}"/>
            <geometry>
                <mesh filename="package://lidar_robot/models/c_clamp.stl" scale="0.001 0.001 0.001"/>
            </geometry>
            <material name="aluminium"/>
        </visual>
    </link>
    <joint name="base_c_clamp_2" type="fixed">
        <parent link="base_link"/>
        <child link="c_clamp_2"/>
    </joint>
    <link name="motor_2">
        <visual>
            <origin xyz="0 0.308 0.045" rpy="${pi/2} -${pi} 0"/>
            <geometry>
                <mesh filename="package://lidar_robot/models/motor.stl" scale="0.001 0.001 0.001"/>
            </geometry>
            <material name="aluminium_dark"/>
        </visual>
    </link>
    <joint name="c_clamp_motor_2" type="fixed">
        <parent link="c_clamp_2"/>
        <child link="motor_2"/>
    </joint>
    <link name="shaft_2">
        <visual>
            <origin xyz="0 0.33 0.045" rpy="0 0 ${pi/2}"/>
            <geometry>
                <mesh filename="package://lidar_robot/models/motor_shaft.stl" scale="0.001 0.001 0.001"/>
            </geometry>
            <material name="plastic"/>
        </visual>
    </link>
    <joint name="motor_shaft_2" type="continuous">
        <parent link="motor_2"/>
        <child link="shaft_2"/>
    </joint>
    <link name="wheel_2">
        <visual>
            <origin xyz="0 0.35 0.045" rpy="0 0 ${pi}"/>
            <geometry>
                <mesh filename="package://lidar_robot/models/wheel2.dae"/>
            </geometry>
            <material name="wheel">
                <texture filename="package://lidar_robot/models/wheel_color.png"/>
            </material>
        </visual>
    </link>
    <joint name="shaft_wheel_2" type="fixed">
        <parent link="shaft_2"/>
        <child link="wheel_2"/>
    </joint>
    <!-- =======================================================Wheel 3====================================================================== -->
    <link name="c_clamp_3">
        <visual>
            <origin xyz="0.32 -0.05 0.09" rpy="${pi/2} 0 ${pi}"/>
            <geometry>
                <mesh filename="package://lidar_robot/models/c_clamp.stl" scale="0.001 0.001 0.001"/>
            </geometry>
            <material name="aluminium"/>
        </visual>
    </link>
    <joint name="base_c_clamp_3" type="fixed">
        <parent link="base_link"/>
        <child link="c_clamp_3"/>
    </joint>
    <link name="motor_3">
        <visual>
            <origin xyz="0.308 0 0.045" rpy="${pi/2} 0 -${pi/2}"/>
            <geometry>
                <mesh filename="package://lidar_robot/models/motor.stl" scale="0.001 0.001 0.001"/>
            </geometry>
            <material name="aluminium_dark"/>
        </visual>
    </link>
    <joint name="c_clamp_motor_3" type="fixed">
        <parent link="c_clamp_3"/>
        <child link="motor_3"/>
    </joint>
    <link name="shaft_3">
        <visual>
            <origin xyz="0.33 0 0.045" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://lidar_robot/models/motor_shaft.stl" scale="0.001 0.001 0.001"/>
            </geometry>
            <material name="plastic"/>
        </visual>
    </link>
    <joint name="motor_shaft_3" type="continuous">
        <parent link="motor_3"/>
        <child link="shaft_3"/>
    </joint>
    <link name="wheel_3">
        <visual>
            <origin xyz="0.35 0 0.045" rpy="0 0 ${pi/2}"/>
            <geometry>
                <mesh filename="package://lidar_robot/models/wheel2.dae"/>
            </geometry>
            <material name="wheel">
                <texture filename="package://lidar_robot/models/wheel_color.png"/>
            </material>
        </visual>
    </link>
    <joint name="shaft_wheel_3" type="fixed">
        <parent link="shaft_3"/>
        <child link="wheel_3"/>
    </joint>

    <!-- =======================================================Wheel 4====================================================================== -->
    <link name="c_clamp_4">
        <visual>
            <origin xyz="-0.05 -0.32 0.09" rpy="${pi/2} 0 ${pi/2}"/>
            <geometry>
                <mesh filename="package://lidar_robot/models/c_clamp.stl" scale="0.001 0.001 0.001"/>
            </geometry>
            <material name="aluminium"/>
        </visual>
    </link>
    <joint name="base_c_clamp_4" type="fixed">
        <parent link="base_link"/>
        <child link="c_clamp_4"/>
    </joint>
    <link name="motor_4">
        <visual>
            <origin xyz="0 -0.308 0.045" rpy="${pi/2} 0 ${pi}"/>
            <geometry>
                <mesh filename="package://lidar_robot/models/motor.stl" scale="0.001 0.001 0.001"/>
            </geometry>
            <material name="aluminium_dark"/>
        </visual>
    </link>
    <joint name="c_clamp_motor_4" type="fixed">
        <parent link="c_clamp_4"/>
        <child link="motor_4"/>
    </joint>
    <link name="shaft_4">
        <visual>
            <origin xyz="0 -0.33 0.045" rpy="0 0 ${-pi/2}"/>
            <geometry>
                <mesh filename="package://lidar_robot/models/motor_shaft.stl" scale="0.001 0.001 0.001"/>
            </geometry>
            <material name="plastic"/>
        </visual>
    </link>
    <joint name="motor_shaft_4" type="continuous">
        <parent link="motor_4"/>
        <child link="shaft_4"/>
    </joint>
    <link name="wheel_4">
        <visual>
            <origin xyz="0 -0.35 0.045" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://lidar_robot/models/wheel2.dae"/>
            </geometry>
            <material name="wheel">
                <texture filename="package://lidar_robot/models/wheel_color.png"/>
            </material>
        </visual>
    </link>
    <joint name="shaft_wheel_4" type="fixed">
        <parent link="shaft_4"/>
        <child link="wheel_4"/>
    </joint>
    <!-- ======================================================= Top Plate ====================================================================== -->
    <link name="top_plate">
        <visual>
            <origin xyz="0.01 0 0.0836" rpy="${pi/2} 0 0"/>
            <geometry>
                <mesh filename="package://lidar_robot/models/top_plate.stl" scale="0.001 0.001 0.001"/>
            </geometry>
            <material name="blue"/>
        </visual>
    </link>
    <joint name="base_link_top_plate" type="fixed">
        <parent link="base_link"/>
        <child link="top_plate"/>
    </joint>
    <!-- ======================================================= Circuit Plate ====================================================================== -->
    <link name="circuit_plate">
        <visual>
            <origin xyz="0 0 0.093" rpy="${pi/2} 0 ${pi/4}"/>
            <geometry>
                <mesh filename="package://lidar_robot/models/circuit_plate.stl" scale="0.001 0.001 0.001"/>
            </geometry>
            <material name="plastic"/>
        </visual>
    </link>
    <joint name="base_link_circuit_plate" type="fixed">
        <parent link="top_plate"/>
        <child link="circuit_plate"/>
    </joint>
</robot>
